<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/course_java_data_persistence?currentSchema=inheritance</property>
        <property name="connection.username">kovalenko</property>
        <property name="connection.password">12345678</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="format_sql">true</property>

        <mapping class="tpc.BaseEntity"/>
        <mapping class="tpc.EmployeeTpcEntity"/>
        <mapping class="tpc.ContractEmployee"/>
        <mapping class="tpc.PersistentEmployee"/>
    </session-factory>
</hibernate-configuration>